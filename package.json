{
  "name": "@imchen/common",
  "version": "0.0.1",
  "description": "Arbitrary long text encryption tool based on JSENCRYPT supports weapp program",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/types/index.d.ts",
  "packageManager": "pnpm@7.9.5",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "dev": "cross-env NODE_ENV=dev rollup --config rollup.config.ts --watch",
    "build": "cross-env NODE_ENV=prod rollup --config rollup.config.ts",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "test:vi": "vitest",
    "doc": "typedoc --options typedoc.json",
    "release:haslog": "esno ./cikit/release.ts",
    "release:nojest": "bumpp --commit \"release: release v%s\" --push --tag && npm publish",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/inquirer": "^9.0.1",
    "@types/jest": "^28.1.7",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.7.8",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "bumpp": "^7.1.1",
    "chalk": "^5.0.1",
    "commitizen": "^4.2.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "esno": "^0.16.3",
    "husky": "^8.0.1",
    "inquirer": "^9.1.0",
    "jest": "^28.1.3",
    "jest-config": "^28.1.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "rollup": "^2.78.1",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.10.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.33.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^28.0.8",
    "tslib": "^2.4.0",
    "typedoc": "^0.23.10",
    "typescript": "^4.7.4",
    "vitest": "0.22.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Cenavy1019/rsa"
  },
  "keywords": [
    "rsa",
    "jsencrypt",
    "weapp",
    "wx-miniapp-program",
    "typescript",
    "special"
  ],
  "author": "hankin.dream <mm154620@163.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Cenavy1019/rsa/issues"
  },
  "homepage": "https://github.com/Cenavy1019/rsa",
  "dependencies": {
    "@imchen/rsa": "^0.0.3",
    "crypto-js": "^4.1.1",
    "lodash-es": "^4.17.21"
  }
}
